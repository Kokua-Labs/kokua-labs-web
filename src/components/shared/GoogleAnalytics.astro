---
const gaUID = import.meta.env.PUBLIC_GA_UID;
---

<script async src={`https://www.googletagmanager.com/gtag/js?id=${gaUID}`}></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", gaUID);
</script>
