---
import Title from "../../shared/Title.astro";

import WavesImage from "../../../assets/png/waves.png";

type ServiceProProps = {
  title: string;
  description: string;
};

const { title, description } = Astro.props as ServiceProProps;
---

<article class="service-pro h-box-shadow">
  <div class="service-pro__content">
    <Title dark title={title} subtitle={description} titleAlign="left" subtitleAlign="left" />
  </div>
  <figure class="service-pro__image">
    <img width="100%" height="100%" loading="lazy" src={WavesImage} alt="waves image" />
  </figure>
</article>

<style>
  .service-pro {
    margin-top: 78px;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: var(--color-black);
    padding: 24px 64px;
    justify-content: space-between;
    border-radius: var(--border-radius);
    &__content {
      flex-basis: 45%;
    }
    &__image {
      display: flex;
      justify-content: center;
      flex-basis: 50%;
      img {
        object-fit: contain;
        width: 452px;
        height: auto;
      }
    }
  }
</style>
