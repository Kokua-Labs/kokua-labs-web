---
import Title from "../shared/Title.astro";

type AboutProps = {
  title: string;
  texts: string[];
};

const { title, texts } = Astro.props as AboutProps;
---

<section class="about-container h-content-wrapper">
  <div class="about-container__content">
    <Title dark title={title} />
    <article class="about-container__text">
      {texts.map((text) => <p>{text}</p>)}
    </article>
  </div>
</section>

<style>
  @import "../../../styles/media-queries.css";

  .about-containerÂ  {
    margin-top: 86px !important;
    @media (--vp-media-desktop) {
      margin-top: 156px !important;
    }

    &__content {
      border-radius: var(--border-radius);
      padding: var(--space-medium-2);
      background: url("https://img.freepik.com/free-vector/dark-blue-waves-dots-abstract-background_79603-879.jpg?w=1800&t=st=1680097367~exp=1680097967~hmac=a0b380483eb9944e02ff4487c30972c3d19e9861c3440b466095a3e1ad4e0f80");
      background-repeat: no-repeat;
      background-size: 150% 150%;
      background-position: center right;
      @media (--vp-media-desktop) {
        padding: var(--space-large-2);
      }
    }

    &__text {
      font-size: var(--space-medium);
      margin-top: var(--space-large) !important;
      color: white;
      p {
        margin-bottom: var(--space-medium-2);
      }
      @media (--vp-media-tablet) {
        font-size: 18px;
      }
      @media (--vp-media-desktop) {
        font-size: 21px;
        line-height: 1.3;
        width: 75%;
      }
    }
  }
</style>
