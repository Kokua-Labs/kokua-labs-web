---
import Title from "../shared/Title.astro";

type AboutProps = {
  title: string;
  texts: string[];
};

import bgImage from "../../assets/png/waves.png";

const { title, texts } = Astro.props as AboutProps;
---

<section class="about-container">
  <div style={{ backgroundImage: `url(${bgImage})` }} class="about-container__content">
    <Title dark title={title} titleAlign="left" />
    <article class="about-container__text">
      {texts.map((text) => <p>{text}</p>)}
    </article>
  </div>
</section>

<style define:vars={{ bgImage }}>
  @import "../../../styles/media-queries.css";

  .about-containerÂ  {
    margin-top: 86px;
    @media (--vp-media-desktop) {
      margin-top: 156px;
    }

    &__content {
      border-radius: var(--border-radius);
      background-color: var(--color-black);
      padding: var(--space-medium-2);
      background-repeat: no-repeat;
      background-position: -208% 75%;
      @media (--vp-media-desktop) {
        padding: var(--space-large-2);
      }
    }

    &__text {
      font-size: var(--space-medium);
      margin-top: var(--space-large);
      color: var(--color-white);
      p {
        margin-bottom: var(--space-medium-2);
      }
      @media (--vp-media-tablet) {
        font-size: 18px;
      }
      @media (--vp-media-desktop) {
        font-size: 21px;
        line-height: 1.3;
        width: 75%;
      }
    }
  }
</style>
