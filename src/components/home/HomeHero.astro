---
import UserLaptopImage from "../../assets/png/user-laptop.png";
import SpaceshipImage from "../../assets/png/spaceship.png";
import SwitchImage from "../../assets/png/switch.png";
import NotepadImage from "../../assets/png/notepad.png";
import WindowImage from "../../assets/png/window.png";
import HandImage from "../../assets/png/hand.png";
import LinkButton from "../shared/LinkButton.astro";
---

<section class="h-box-shadow home-hero-container">
  <article class="home-hero-container__content">
    <h1 class="home-hero-container__title animate__animated animate__fadeIn">
      Si tienes una idea, necesitas <span class="home-hero-container__company-name">kokua</span>
    </h1>
    <p class="home-hero-container__description">Tu partner y asesor para la tranformaciÃ³n digital de tu negocio</p>
    <div class="h-drop-shadow">
      <LinkButton to="/contact" label="Hablemos ðŸ™‚" />
    </div>
    <figure class="home-hero-container__user-image">
      <img loading="lazy" alt="user with 3d laptop image" src={UserLaptopImage} />
    </figure>
    <figure class="home-hero-container__spaceship-image animate__animated animate__fadeInBottomLeft h-drop-shadow">
      <img loading="lazy" alt="spaceship 3d image" src={SpaceshipImage} />
    </figure>
    <figure class="home-hero-container__switch-image h-drop-shadow animate__animated animate__bounce">
      <img loading="lazy" alt="switch 3d image" src={SwitchImage} />
    </figure>
    <figure class="home-hero-container__notepad-image h-drop-shadow">
      <img loading="lazy" alt="notepad 3d image" src={NotepadImage} />
    </figure>
    <figure class="home-hero-container__window-image h-drop-shadow">
      <img loading="lazy" alt="window 3d image" src={WindowImage} />
    </figure>
    <figure class="home-hero-container__hand-image animate__animated animate__fadeInRight">
      <img loading="lazy" alt="hand 3d image" src={HandImage} />
    </figure>
  </article>
</section>

<style>
