    &__title {
      margin-bottom: var(--space-medium);
      font-family: "bioticbold";
      font-size: 84px;
    }
    &__company-name {
      font-family: "rykerbold";
      font-size: 84px;
    }
    &__description {
      font-family: "bioticregular";
      font-size: 18px;
      width: 60%;
      line-height: 1.3;
      margin-bottom: var(--space-medium);
