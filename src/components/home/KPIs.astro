---
type BannerProps = {
  title: string;
  title2: string;
  subtitle: string;
  kpi1: Kpi;
  kpi2: Kpi;
  kpi3: Kpi;
};

import HandWritingImage from "../../assets/png/hand-writing.png";
import UserProfileImage from "../../assets/png/user-profile.png";
import HandsImage from "../../assets/png/phone-hands.png";

type Kpi = {
  title: string;
  description: string;
  image?: string;
};

const { title, title2, subtitle, kpi1, kpi2, kpi3 } = Astro.props as BannerProps;
kpi1.image = UserProfileImage;
kpi2.image = HandWritingImage;
kpi3.image = HandsImage;

const kpis = [kpi1, kpi2, kpi3];
---

<section class="banner-container h-content-wrapper">
  <article class="banner-container__content">
    <h2 class="banner-container__title">{title} <span class="h-ryker-font">Kokua</span> {title2}</h2>
    <p class="banner-container__subtitle">{subtitle}</p>
  </article>
  <article class="banner-container__kpis">
    {
      kpis.map((kpi) => (
        <div class="banner-container__kpi">
          <figure>
            <img src={kpi.image} alt="" />
          </figure>
          <h3 class="h-ryker-font">{kpi.title}</h3>
          <p>{kpi.description}</p>
        </div>
      ))
    }
  </article>
</section>

<style>
  .banner-container {
    margin-top: var(--space-xl-large) !important;
    text-align: center;
    padding: var(--space-large-4) 0;
    &__title {
      margin-bottom: var(--space-medium);
      font-family: "bioticbold";
      font-size: 48px;
      line-height: 1;
      color: var(--color-main);
    }
    &__subtitle {
      font-size: 21px;
      margin-bottom: var(--space-large);
    }

    &__kpis {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      align-items: center;
      column-gap: var(--space-large);
    }
    &__kpi {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-small-2);
      text-align: center;
      padding: 0 var(--space-large);
      font-size: 21px;
    }
  }
</style>
