---
import Title from "../shared/Title.astro";
import NestLogo from "../../assets/svg/nest-logo.svg";
import ReactLogo from "../../assets/svg/react-logo.svg";
import FigmatLogo from "../../assets/svg/figma-logo.svg";
import FluttertLogo from "../../assets/svg/flutter-logo.svg";
import NextLogo from "../../assets/svg/next-logo.svg";
import RubyLogo from "../../assets/svg/ruby-logo.svg";
import VercelLogo from "../../assets/svg/vercel-logo.svg";
import VueLogo from "../../assets/svg/vue-logo.svg";
import WordpressLogo from "../../assets/svg/wordpress-logo.svg";
import HTMLLogo from "../../assets/svg/html-logo.svg";
import CSSLogo from "../../assets/svg/css-logo.svg";
import DockerLogo from "../../assets/svg/docker-logo.svg";
import RailsLogo from "../../assets/svg/rails-logo.svg";
import MongoLogo from "../../assets/svg/mongo-logo.svg";
import AstroLogo from "../../assets/svg/astro-logo.svg";
import NuxtLogo from "../../assets/svg/nuxt-logo.svg";

type TechStackProps = {
  title: string;
  subtitle: string;
};

const { title, subtitle } = Astro.props as TechStackProps;

const stack = [
  { image: NestLogo, alt: "Nest logo" },
  { image: ReactLogo, alt: "React logo" },
  { image: FigmatLogo, alt: "Figma logo" },
  { image: FluttertLogo, alt: "Flutter logo" },
  { image: NextLogo, alt: "Next logo" },
  { image: RubyLogo, alt: "Ruby logo" },
  { image: VercelLogo, alt: "Vercel logo" },
  { image: VueLogo, alt: "Vue logo" },
  { image: WordpressLogo, alt: "Wordpress logo" },
  { image: HTMLLogo, alt: "Html logo" },
  { image: CSSLogo, alt: "css logo" },
  { image: RailsLogo, alt: "Rails logo" },
  { image: DockerLogo, alt: "Docker logo" },
  { image: MongoLogo, alt: "Mongo logo" },
  { image: AstroLogo, alt: "Astro logo" },
  { image: NuxtLogo, alt: "Nuxt logo" },
];
---

<section class="tech-stack">
  <article class="tech-stack__title">
    <Title
      title={title}
      subtitle={subtitle}
      titleAlign="left"
      subtitleAlign="left"
    />
  </article>
  <article class="tech-stack__grid">
    {
      stack.map((tech) => {
        return (
          <figure class="h-drop-shadow  tech-stack__grid-item">
            <img
              width="100%"
              height="100%"
              loading="lazy"
              src={tech.image}
              alt={tech.alt}
            />
          </figure>
        );
      })
    }
  </article>
</section>

<style>
  @import "../../../styles/media-queries.css";

  .tech-stack {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 86px;

    @media (--vp-media-desktop) {
      margin-top: 156px;
      flex-direction: row;
      gap: var(--space-large);
    }
    &__title {
      @media (--vp-media-desktop) {
        width: 48%;
      }
    }
    &__grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: var(--space-small);
      @media (--vp-media-desktop) {
        gap: var(--space-medium-2);
      }
    }
    &__grid-item {
      padding: var(--space-medium-2);
      width: 80px;
      height: 80px;
      transition: all 0.1s ease;

      @media (--vp-media-tablet) {
        width: 90px;
        height: 90px;
      }
      @media (--vp-media-desktop) {
        width: 100px;
        height: 100px;
      }
      &:hover {
        transform: scale(1.2);
      }
    }
  }
</style>
