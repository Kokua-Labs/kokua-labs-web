---
type ParkingLayoutProps = {
  title: string;
  contentTitle: string;
  contentDescription: string;
};

import KokuaLabsLogo from "../components/shared/KokuaLabsLogo.astro";

const { title, contentTitle, contentDescription } =
  Astro.props as ParkingLayoutProps;

import i18next from "i18next";
import SocialLinks from "../components/shared/SocialLinks.astro";
import GoogleAnalytics from "../components/shared/GoogleAnalytics.astro";
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <GoogleAnalytics />
    <main class="parking-layout-container">
      <KokuaLabsLogo dark />
      <section>
        <h1 class="parking-layout-container__title">{contentTitle}</h1>
        <p>{contentDescription}</p>
      </section>
      <SocialLinks />
    </main>
  </body>
</html>

<style>
  @import "../../styles/media-queries.css";
  .parking-layout-container {
    padding: 96px 32px;
    background-color: var(--color-main);
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    color: var(--color-white);
    text-align: center;

    &__title {
      font-family: "rykerbold";
      text-transform: uppercase;
      margin-bottom: 32px;
      font-size: 32px;
      @media (--vp-media-tablet) {
        font-size: 42px;
      }
      @media (--vp-media-desktop) {
        font-size: 48px;
      }
    }
  }
</style>
